# Eclair Configuration Template for Regtest
#
# Copy this file to your eclair data directory as eclair.conf
# and customize as needed.
#
# See reference.conf in eclair-core for all available options.

# Network: mainnet, testnet, signet, regtest
eclair.chain = regtest

# Node identity
eclair.node-alias = "eclair-dev"
eclair.node-color = "49daaa"

# API Configuration
eclair.api.enabled = true
eclair.api.password = "devpassword"  # CHANGE IN PRODUCTION
eclair.api.binding-ip = "0.0.0.0"
eclair.api.port = 8080

# Bitcoin Core Connection
# When using docker-compose, use service name "bitcoind"
# When connecting to host, use "host.docker.internal" (Docker Desktop) or actual IP
eclair.bitcoind.host = "bitcoind"
eclair.bitcoind.rpcport = 18443
eclair.bitcoind.rpcuser = "bitcoin"
eclair.bitcoind.rpcpassword = "bitcoin"
eclair.bitcoind.wallet = ""  # Empty for default wallet
eclair.bitcoind.zmqblock = "tcp://bitcoind:28332"
eclair.bitcoind.zmqtx = "tcp://bitcoind:28333"

# Server (Lightning P2P)
eclair.server.port = 9735
eclair.server.binding-ip = "0.0.0.0"

# Channel defaults for development/testing
# Lower values for faster testing
eclair.channel.mindepth-blocks = 1
eclair.channel.min-funding-satoshis = 100000
eclair.channel.max-funding-satoshis = 16777215

# On-chain fees (regtest can use low fees)
eclair.on-chain-fees.target-blocks.funding = 1
eclair.on-chain-fees.target-blocks.mutual-close = 1
eclair.on-chain-fees.target-blocks.claim-main-output = 1

